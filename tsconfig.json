{
    "include": ["src/**/*"],
    "compilerOptions": {
       "module": "commonjs",
       "target": "ES5",
       "outDir": "dist",
       "declaration": true,
       "declarationMap": true,
       "esModuleInterop": true,
       "sourceMap": false,
       "noImplicitAny": true,
       "noImplicitThis": true,
       "noImplicitReturns": true,
       "strictNullChecks": true,
       "strictFunctionTypes": true
    }
 }